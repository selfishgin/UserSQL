<Page x:Class="UserSQL.LoginForm"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UserSQL"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginForm">

    <Grid>
        <TextBox x:Name="txtLogin" Width="200" Height="25" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,40,0,0" />
        <Label x:Name="Login" Width="85" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="210,40,0,0" Content="Login"/>
        
        <PasswordBox x:Name="txtPassword" Width="200" Height="25" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,80,0,0" />
        <Label x:Name="Password" Width="85" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="210,80,0,0" Content="Password"/>
        
        <Button x:Name="btnSignIn" Content="Sign In" Width="100" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,120,0,0" Click="btnSignIn_Click"/>
        <Button x:Name="btnSignUp" Content="Sign Up" Width="100" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,120,100,0" Click="btnSignUp_Click"/>
    </Grid>
</Page>
